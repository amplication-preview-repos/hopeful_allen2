datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Course {
  createdAt     DateTime       @default(now())
  description   String?
  endDate       DateTime?
  id            String         @id @default(cuid())
  registrations Registration[]
  startDate     DateTime?
  title         String?
  trainer       String?
  updatedAt     DateTime       @updatedAt
}

model Registration {
  course           Course?   @relation(fields: [courseId], references: [id])
  courseId         String?
  createdAt        DateTime  @default(now())
  id               String    @id @default(cuid())
  registrationDate DateTime?
  updatedAt        DateTime  @updatedAt
  user             User?     @relation(fields: [userId], references: [id])
  userId           String?
}

model News {
  content     String?
  createdAt   DateTime  @default(now())
  id          String    @id @default(cuid())
  publishDate DateTime?
  title       String?
  updatedAt   DateTime  @updatedAt
}

model Event {
  createdAt   DateTime  @default(now())
  date        DateTime?
  description String?
  id          String    @id @default(cuid())
  title       String?
  updatedAt   DateTime  @updatedAt
}

model User {
  createdAt     DateTime       @default(now())
  email         String?        @unique
  firstName     String?
  id            String         @id @default(cuid())
  lastName      String?
  password      String
  registrations Registration[]
  roles         Json
  updatedAt     DateTime       @updatedAt
  username      String         @unique
}
